<div class="page-header">
  <%= link_to project_path(@project), :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_project_project_layer_path(@project, @project_layer), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1>Listing project layers</h1>
</div>

<dl>
  <dt>Display name:</dt>
  <dd><%= @project_layer.display_name %></dd>

  <dt>Type:</dt>
  <dd><%= @project_layer.type %></dd>

  <dt>Tile url:</dt>
  <dd><%= @project_layer.tile_url %></dd>

  <dt>Is displayed:</dt>
  <dd><%= @project_layer.is_displayed %></dd>

  <dt>Provider:</dt>
  <dd><%= @project_layer.provider_id %></dd>
</dl>

<h2>Project layers</h2>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Display name</th>
      <th>Unit</th>
      <th>Operation</th>
    </tr>
  </thead>

  <tbody>
<% @project_layer.calculations.each do |calculation| %>
    <tr>
      <td><%= calculation.display_name %></td>
      <td><%= calculation.unit %></td>
      <td><%= calculation.operation %></td>
    </tr>
<% end %>
  </tbody>
</table>
