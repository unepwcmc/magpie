<%= simple_form_for(@project_layer, url: (@project_layer.new_record? ? project_project_layers_path(@project) : project_project_layer_path(@project, @project_layer)), :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :display_name %>
    <%= f.input :type %>
    <%= f.input :tile_url %>
    <%= f.input :is_displayed %>
    <%= f.input :provider_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
