<%= simple_form_for(@project_layer, as: :project_layer, url: (@project_layer.new_record? ? project_project_layers_path(@project) : project_project_layer_path(@project, @project_layer)), :defaults => { :input_html => { :class => 'span8' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type, as: :hidden %>
    <%= f.input :display_name %>
    <%= f.input :provider_id, collection: format_raster_list_for_select(@raster_list), include_blank: false %>
    <%= f.input :is_displayed, input_html: { class: '' } %>
  </div>

  <div class="page-header">
    <%= link_to_add_fields "Add Calculation", f, :calculations %>
    <h2>Calculations</h2>
  </div>

  <table class="calculations table table-bordered table-striped">
    <thead>
      <tr>
        <th>Display name</th>
        <th>Unit</th>
        <th>Operation</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= f.simple_fields_for :calculations, :defaults => { :input_html => { :class => '' } } do |g| %>
        <%= render 'calculation_fields', :f => g %>
      <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
