<%= simple_form_for(@project_layer, url: (@project_layer.new_record? ? project_project_layers_path(@project) : project_project_layer_path(@project, @project_layer)), :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type, collection: ['RasterLayer'], include_blank: false %>
    <%= f.input :display_name %>
    <%= f.input :provider_id, collection: @rasters_select, include_blank: false %>
    <%= f.input :is_displayed %>
  </div>

  <h2>Calculations</h2>

  <%= f.simple_fields_for :calculations do |g| %>
    <%= render 'calculation_fields', :f => g %>
  <% end %>
  <%= link_to_add_fields "Add Calculation", f, :calculations %>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
