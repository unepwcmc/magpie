<h1>Add a new App</h1>
<div>
  <%= form_for @app, do |f| %>
    <p><%= f.label :name %>: <%= f.text_field :name %></p>
    <p><%= label_tag :rasters %>: <%= select_tag :rasters, options_for_select(@rasters.collect{|r| [r["display_name"], "#{r["id"]},#{r["display_name"]}"]}), :multiple => true %>
    <p><%= label_tag :operations %>: <%= select_tag :operations, options_for_select(@operations.collect{|o| [o["display_name"], o["id"]]}), :multiple => true %>
    <p><%= submit_tag "Create" %></p>
  <% end %>
</div>
